@model MvcMovie.Models.Sell

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>판매관리</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="s_code" class="control-label"></label>
                <input asp-for="s_code" class="form-control" />
                <span asp-validation-for="s_code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="p_name" class="control-label"></label>
                <select asp-for="p_name" class="form-control" asp-items="ViewBag.p_name"></select>
            </div>
            <div class="form-group">
                <label asp-for="SellDate" class="control-label"></label>
                <input asp-for="SellDate" class="form-control" />
                <span asp-validation-for="SellDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="s_amount" class="control-label"></label>
                <input asp-for="s_amount" class="form-control" />
                <span asp-validation-for="s_amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="10000" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">저장</button>
                <a class="btn btn-warning" asp-controller="Products" asp-action="Index">취소</a>
            </div>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
